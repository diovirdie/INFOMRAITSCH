<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".informacionadministrador">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:background="#D543464E">
            <TableRow>
                <ImageButton
                    android:id="@+id/btnregresarinfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:src="@drawable/baseline_keyboard_backspace_24"
                    android:background="@android:color/transparent"
                    android:layout_marginBottom="6dp"
                    />
                <TextView></TextView>
                <TextView></TextView>


            </TableRow>

        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_margin="8dp"


            >

            <TableRow>




                <androidx.cardview.widget.CardView
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="@android:color/white">

                    <ImageView
                        android:id="@+id/iconoa"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/alert"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:scaleType="centerCrop"/>

                </androidx.cardview.widget.CardView>





                <TextView
                    android:id="@+id/textoencabezadoan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Importante"
                    android:textColor="@color/black"
                    android:textSize="30dp"

                    android:layout_marginStart="6dp"/>



            </TableRow>
            <TextView
                android:id="@+id/asunto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asunto sobre el tema "
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/imagenProducto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"


                android:src="@drawable/alert"
                android:scaleType="centerInside"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion "
                android:textSize="20dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/Descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Descripcion "
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"
                android:textColor="@color/black"/>






        </TableLayout>




    </LinearLayout>



</ScrollView>