<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Alumno">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Informacion Sobre"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            android:textAlignment="center"
            android:textStyle="bold"
            />

        <TableRow>

            <RadioGroup
                android:id="@+id/rgrelevancia"
                android:layout_width="399dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:textAlignment="center">

                <RadioButton
                    android:id="@+id/general"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:background="@android:color/transparent"
                    android:checked="true"

                    android:text="General"
                    android:textColor="#8E8D8D"
                    android:textSize="30dp"
                    android:textStyle="bold" />

                <RadioButton
                    android:id="@+id/carrera"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:text="Carrera"
                    android:textColor="#5E5E5E"
                    android:textSize="30dp"
                    android:textStyle="bold"

                    />

                <RadioButton
                    android:id="@+id/Alta"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@android:color/transparent"
                    android:text="Alta"
                    android:textColor="#C8101010"
                    android:textSize="30dp"
                    android:textStyle="bold" />


            </RadioGroup>


        </TableRow>
        <FrameLayout
            android:id="@+id/contenedor_fragmento"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAnuncioprincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            tools:listitem="@layout/card_anuncio"/>
    </TableLayout>


</LinearLayout>